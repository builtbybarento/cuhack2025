{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "QNX: build debug",
			"command": "make DEBUG=-g OPTIMIZE_TYPE=NONE",
			"options": {
				"cwd": "${workspaceFolder}",
				"env": {
					"QNX_HOST": "${env:QNX_HOST}",
					"QNX_TARGET": "${env:QNX_TARGET}",
					"MAKEFLAGS": "${env:MAKEFLAGS}",
					"Path": "${env:Path}"
				}
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "QNX: install",
			"command": "make INSTALL_ROOT_nto=${config:qnx.installRoot}/nto USE_INSTALL_ROOT=1 hinstall install",
			"options": {
				"cwd": "${workspaceFolder}",
				"env": {
					"QNX_HOST": "${env:QNX_HOST}",
					"QNX_TARGET": "${env:QNX_TARGET}",
					"MAKEFLAGS": "${env:MAKEFLAGS}",
					"Path": "${env:Path}"
				}
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"type": "shell",
			"label": "QNX: clean",
			"command": "make clean",
			"options": {
				"cwd": "${workspaceFolder}",
				"env": {
					"QNX_HOST": "${env:QNX_HOST}",
					"QNX_TARGET": "${env:QNX_TARGET}",
					"MAKEFLAGS": "${env:MAKEFLAGS}",
					"Path": "${env:Path}"
				}
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"type": "shell",
			"label": "QNX: build",
			"command": "make",
			"options": {
				"cwd": "${workspaceFolder}",
				"env": {
					"QNX_HOST": "${env:QNX_HOST}",
					"QNX_TARGET": "${env:QNX_TARGET}",
					"MAKEFLAGS": "${env:MAKEFLAGS}",
					"Path": "${env:Path}"
				}
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			}
		}
	]
}